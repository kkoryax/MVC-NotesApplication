@using NoteFeature_App.Models.User

@model List<UserModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "User Manager";
}

<main>
    <div class="d-flex justify-content-between align-items-center mb-4 user-select-none">
        <h1 class="display-5 mb-0">
            <i class="bi bi-person-workspace"></i>
            User Manager
        </h1>
    </div>

    <!-- filter -->
    <form method="get" action="" class="row g-3 mb-4">
        <div class="col-md-4">
            <label for="filterSearch" class="user-select-none">Search</label>
            <input id="filterSearch" name="filterSearch" class="form-control" type="text" placeholder="ค้นหาโดยชื่ออีเมล" />
        </div>
        <div class="col-md-2 d-flex align-items-center">
            <button type="button" class="btn btn-outline-secondary" style="margin-top: 24px; width: 3rem" data-bs-toggle="modal" data-bs-target="#userAdvanceFilterModal">
                <i class="bi bi-funnel"></i>
            </button>
        </div>
        <hr />
    </form>

    <!-- Advance Filter Modal-->
    <div class="modal fade" id="userAdvanceFilterModal" tabindex="-1" aria-labelledby="userAdvanceFilterModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title user-select-none" id="userAdvanceFilterModalLabel">
                        <i class="bi bi-funnel"></i>
                        Advance Filter
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3 mb-4">
                        <div class="col-md-4">
                            <label for="filterSort" class="user-select-none">Sort by</label>
                            <select id="filterSort" class="form-select" name="SortDirection">
                                <option value="CreatedAt desc" selected>Newest to oldest</option>
                                <option value="CreatedAt asc">Oldest to Newest</option>
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label for="filterDateFrom" class="user-select-none">From</label>
                            <input id="filterDateFrom" name="FromDate" class="form-control" type="date" />
                        </div>

                        <div class="col-md-4">
                            <label for="filterDateTo" class="user-select-none">To</label>
                            <input id="filterDateTo" name="ToDate" class="form-control" type="date" />
                        </div>
                    </div>

                    <label for="userFilterStatus" class="form-label user-select-none">Filter type</label>
                    <select class="form-select" id="userFilterStatus" name="userFilterStatus" multiple="multiple">
                        <option value="Guest">Guest</option>
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="applyUserAdvanceFilter">Apply</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th>
                Created At
            </th>
            <th>
                Actions
            </th>
        </tr>
        <tbody id="userListContainer" class="flex-column">    
                <!-- Data fetch -->
        </tbody>
    </table>

    <!-- Pagination template from P'TAR project -->
    <div class="">
        <div class="row mt-3">
            <div class="col-12 col-sm-6 d-flex justify-content-center justify-content-md-start">
                <label for="paginationPerPageSelect" class="mr-2 text-gray-700 align-self-center">Rows per page:</label>
                <select id="paginationPerPageSelect" class="px-3 py-2 border rounded-lg" style="border-radius: 7px; margin-left: 5px;">
                    <option value="10" selected>10</option>
                    <option value="20">20</option>
                </select>
            </div>
            <div class="col-12 col-sm-6 d-flex mt-4 mt-sm-0 mt-md-0 justify-content-center justify-content-md-end">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm d-flex align-items-center mb-0" id="pagination">
                        <!-- ปุ่มจะถูกสร้างโดย JavaScript -->
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <!-- Script Pagination from P'TAR Project -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/pagination.js?ver=@DateTime.Now.Ticks.ToString()"></script>
    <script src="~/js/user.js?ver=@DateTime.Now.Ticks.ToString()"></script>

    <!-- Include select 2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script type="text/javascript">

        let selectedStatuses = [];

        $(document).ready(function () {

             // Init select2
         $('#userFilterStatus').select2({
                placeholder: "เลือกประเภทฟิลเตอร์",
                allowClear: true,
                width: '100%',
                dropdownParent: $('#userAdvanceFilterModal')
            });

             // ✅ ตั้งค่า selectedStatuses ตั้งแต่แรก จากค่าใน select ที่ถูก selected
             selectedStatuses = $('#userFilterStatus').val() ? $('#userFilterStatus').val() : [];

             // เมื่อ select2 เปลี่ยนค่า
             $('#userFilterStatus').on('change', function () {
                selectedStatuses = $(this).val() ? $(this).val() : [];
                // console.log('Select2 changed, selectedStatuses:', selectedStatuses);
            });

            // เมื่อเปิด modal ให้ sync ค่าอีกครั้ง (optional)
             $('#userAdvancedFilterModal').on('shown.bs.modal', function () {
                $('#userFilterStatus').val(selectedStatuses).trigger('change');
            });

            user.init();
        });
    </script>
}