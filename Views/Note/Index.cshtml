

@{
    ViewData["Title"] = "Home";
}

<main>
    <div class="d-flex justify-content-between align-items-center mb-4 user-select-none">
        <h1 class="display-5 mb-0">
            <i class="bi bi-journal-text text-primary"></i> My Notes
        </h1>
        <a class="btn btn-success btn-lg shadow-sm" href="/create">
            <i class="bi bi-plus-lg"></i> Add Note
        </a>
    </div>

    <!-- filter -->
    <form method="get" action="" class="row g-3 mb-4">
        <div class="col-md-4">
            <label for="">Search</label>
            <input id="" name="" value=""  class="form-control" type="text" placeholder="ค้นหาโดยชื่อเรื่องหรือเนื้อหา" />
        </div>

        <div class="col-md-2">
            <label for="">Sort by</label>
            <select class="form-select" name="SortDirection">
                <option id="" value="" selected="">Newest to oldest</option>
                <option id="" value="" selected="">Oldest to Newest</option>
            </select>
        </div>

        <div class="col-md-2">
            <label>From</label>
            <input id="filterDateFrom" name="" value=""  class="form-control" type="date" />
        </div>

        <div class="col-md-2">
            <label>To</label>
            <input id="filterDateTo" name="" value="" class="form-control" type="date" />
        </div>

        <div class="col-md-1 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
        <hr />
    </form>

        <div id="noteListContainer" class="row g-4">
          <!-- Data fetch -->
        </div>

            <!-- Pagination template from P'TAR project -->
        <div class="">
            <div class="row mt-3">
                <div class="col-12 col-sm-6 d-flex justify-content-center justify-content-md-start">
                    <label for="paginationPerPageSelect" class="mr-2 text-gray-700 align-self-center">Rows per page:</label>
                    <select id="paginationPerPageSelect" class="px-3 py-2 border rounded-lg" style="border-radius: 7px; margin-left: 5px;">
                        <option value="6" selected>6</option>
                        <option value="15">15</option>
                    </select>
                </div>
                <div class="col-12 col-sm-6 d-flex mt-4 mt-sm-0 mt-md-0 justify-content-center justify-content-md-end">
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm d-flex align-items-center mb-0" id="pagination">
                            <!-- ปุ่มจะถูกสร้างโดย JavaScript -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Note</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <span id="deleteModalMessage">Are you sure you want to delete this note?</span>
                </div>
                <div class="modal-footer">
                    <form id="deleteForm" action="" method="post">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <style>
        .note-card {
            transition: box-shadow 0.2s, transform 0.2s;
        }

            .note-card:hover {
                box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
                transform: translateY(-4px) scale(1.02);
            }
    </style>

<!-- Script Pagination from P'TAR Project -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/pagination.js?ver=@DateTime.Now.Ticks.ToString()"></script>
<script src="~/js/note.js?ver=@DateTime.Now.Ticks.ToString()"></script>
<script type="text/javascript">
    $(document).ready(function () {
        note.init();
    });
</script>
}