@{
    ViewData["Title"] = "Home";
}

<main>
    <div class="d-flex justify-content-between align-items-center mb-4 user-select-none">
        <h1 class="display-5 mb-0">
            <i class="bi bi-journal-text"></i>
            All Notes
        </h1>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-success btn-lg shadow-sm" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="bi bi-plus-lg"></i> Add Note
            </button>
        </div> <!-- Call Modakl-->
    </div>

    <!-- filter -->
    <form method="get" action="" class="row g-3 mb-4">
        <div class="col-md-4">
            <label for="filterSearch" class="user-select-none">Search</label>
            <input id="filterSearch" name="filterSearch" class="form-control" type="text" placeholder="ค้นหาโดยชื่อเรื่องหรือเนื้อหา" />
        </div>

        <div class="col-md-2">
            <label for="filterSort" class="user-select-none">Sort by</label>
            <select id="filterSort" class="form-select" name="SortDirection">
                <option value="CreatedAt desc" selected>Newest to oldest</option>
                <option value="CreatedAt asc">Oldest to Newest</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="filterDateFrom" class="user-select-none">From</label>
            <input id="filterDateFrom" name="FromDate" class="form-control" type="date" />
        </div>

        <div class="col-md-2">
            <label for="filterDateTo" class="user-select-none">To</label>
            <input id="filterDateTo" name="ToDate" class="form-control" type="date" />
        </div>

        <hr />
    </form>

        <div id="noteListContainer" class="row g-4">
          <!-- Data fetch -->
        </div>

            <!-- Pagination template from P'TAR project -->
        <div class="">
            <div class="row mt-3">
                <div class="col-12 col-sm-6 d-flex justify-content-center justify-content-md-start">
                    <label for="paginationPerPageSelect" class="mr-2 text-gray-700 align-self-center">Rows per page:</label>
                    <select id="paginationPerPageSelect" class="px-3 py-2 border rounded-lg" style="border-radius: 7px; margin-left: 5px;">
                        <option value="6" selected>6</option>
                        <option value="15">15</option>
                    </select>
                </div>
                <div class="col-12 col-sm-6 d-flex mt-4 mt-sm-0 mt-md-0 justify-content-center justify-content-md-end">
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm d-flex align-items-center mb-0" id="pagination">
                            <!-- ปุ่มจะถูกสร้างโดย JavaScript -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    <!-- Note Edit Modal -->
    <div class="modal fade" id="noteDetailModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title user-select-none">
                        <i class="bi bi-sticky text-warning me-2"></i>
                        <span id="modalNoteTitle">Edit Note</span>
                        <span id="modalNotePinned" class="ms-2" style="display: none;">
                            <i class="bi bi-pin-angle-fill text-danger"></i>
                        </span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- Edit Mode Only -->
                    <div id="editMode">
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="bi bi-calendar3 me-1"></i>
                                <span id="modalCreatedAt"></span>
                                <span id="modalUpdatedAt" class="ms-3" style="display: none;"></span>
                                <br>
                                <i class="bi bi-person me-1"></i>
                                <span id="modalCreatedBy"></span>
                            </small>
                        </div>
                        <form id="editForm">
                            <input type="hidden" id="editNoteId" name="NoteId" />

                            <div class="mb-3">
                                <label for="editNoteTitle" class="form-label user-select-none">
                                    Title <span class="text-danger">*</span>
                                </label>
                                <input class="form-control" id="editNoteTitle" name="NoteTitle" type="text" required />
                            </div>

                            <div class="mb-3">
                                <label for="editNoteContent" class="form-label user-select-none">
                                    Content <span class="text-danger">*</span>
                                </label>
                                <textarea id="editNoteContent" name="NoteContent" class="form-control" style="height: fit-content"required></textarea>
                            </div>

                            <div class="mb-3">
                                <div class="form-check" id="editIsPinnedBox">
                                    <input type="checkbox" id="editIsPinned" name="IsPinned" value="true" class="form-check-input" />
                                    <label for="editIsPinned" class="form-check-label">
                                        Pin this note
                                    </label>
                                </div>
                            </div>

                            <div id="editErrors" class="mb-3 text-danger" style="display: none;"></div>
                        </form>
                    </div>
                </div>

                <div class="modal-footer">
                    <!-- Edit Mode Buttons -->
                    <div id="editButtons">
                        <button type="button" class="btn btn-secondary me-2" id="cancelEditBtn">
                            @* <i class="bi bi-x-circle me-1"></i>Cancel *@
                            Cancel
                        </button>
                        <button type="button" class="btn btn-success" id="saveEditBtn">
                            Save
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title user-select-none">
                        Create Note
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- Create Mode Only -->
                        <form id="editForm">
                            <input type="hidden" id="createNoteId" name="NoteId" />

                            <div class="mb-3">
                                <label for="createNoteTitle" class="form-label user-select-none">
                                    Title <span class="text-danger">*</span>
                                </label>
                                <input class="form-control" id="createNoteTitle" name="NoteTitle" type="text" required />
                            </div>

                            <div class="mb-3">
                                <label for="createNoteContent" class="form-label user-select-none">
                                    Content <span class="text-danger">*</span>
                                </label>
                                <textarea id="createNoteContent" name="NoteContent" class="form-control" style="height: 200px" required></textarea>
                            </div>

                            <div class="mb-3 d-flex flex-row justify-content-between">
                                <div class="form-check" id="createIsPinnedBox">
                                <input type="checkbox" id="createIsPinned" name="IsPinned" value="true" class="form-check-input user-select-none" />
                                    <label for="createIsPinned" class="form-check-label">
                                        Pin this note
                                    </label>
                                </div>
                                <!-- Create Mode Buttons -->
                                <div id="createButtons">
                                    <button type="button" class="btn btn-secondary me-2" id="cancelCreateBtn">
                                        @* <i class="bi bi-x-circle me-1"></i>Cancel *@
                                        Cancel
                                    </button>
                                    <button type="button" class="btn btn-success" id="saveCreateBtn">
                                        Save
                                    </button>
                                </div>
                            </div>

                            <div id="createErrors" class="mb-3 text-danger" style="display: none;"></div>
                        </form>
                    </div>
                </div>

               
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog user-select-none">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Note</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <span id="deleteModalMessage">Are you sure you want to delete this note?</span>
                </div>
                <div class="modal-footer">
                    <form id="deleteForm" action="" method="post">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Permission Denied Modal -->
    <div class="modal fade" id="permissionDeniedModal" tabindex="-1" aria-labelledby="permissionDeniedModal" aria-hidden="true">
        <div class="modal-dialog user-select-none">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="permissionDeniedLabel">Notification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <span id="permissionDeniedModalMessage" class="text-danger">You must own this note to delete.</span>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
<!-- Script Pagination from P'TAR Project -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/pagination.js?ver=@DateTime.Now.Ticks.ToString()"></script>
<script src="~/js/note.js?ver=@DateTime.Now.Ticks.ToString()"></script>
<script type="text/javascript">
    $(document).ready(function () {
        note.init();
    });
</script>
}